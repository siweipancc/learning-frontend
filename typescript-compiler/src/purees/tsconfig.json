{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "pretty": true,
    "declaration": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "incremental": true,
    "target": "ES2022",
    "newLine": "lf",

    "customConditions": [
      "module"
    ],
    // Required
    "module": "esnext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    // Recommended
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "verbatimModuleSyntax": true
  }
}