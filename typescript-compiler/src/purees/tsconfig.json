{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "pretty": true,
    "declaration": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "incremental": true,
    "target": "ES2022",
    "newLine": "lf",

    // Required
    "module": "esnext",
    "moduleResolution": "Node10",
    "esModuleInterop": true,
    // Recommended
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "verbatimModuleSyntax": true
  }
}